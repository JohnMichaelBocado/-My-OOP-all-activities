    private void radMochaActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // selects Mocha option
        if(radMocha.isSelected())
            radBlackCoffee.setSelected(false);
            radCappuccino.setSelected(false); 
        
    }                                        

    private void radCappuccinoActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // selects Cappuccino option
        if(radCappuccino.isSelected())
            radBlackCoffee.setSelected(false);
            radMocha.setSelected(false); 
    }                                             

    private void chkCinnamonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
    }                                           

    private void radBlackCoffeeActionPerformed(java.awt.event.ActionEvent evt) {                                               
        // selects BlackCoffee option
        if(radBlackCoffee.isSelected())
            radMocha.setSelected(false);
            radCappuccino.setSelected(false);   
    }                                              

    private void btnEntActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
       
        double total;
        double subtotal =  0;
        final double TAXRATE =  0.08;
        double tax;
                
        if  (radBlackCoffee.isSelected()){
                subtotal = subtotal +  39;
        }else if (radMocha.isSelected()){
                subtotal = subtotal +  49;
        }else if (radCappuccino.isSelected()){
                subtotal = subtotal +  59;
        }
        
        if(chkStar.isSelected()){
                subtotal = subtotal +  10;
        }if(chkCookies.isSelected()){
                subtotal = subtotal +  20;
        }if(chkCinnamon.isSelected()){
                subtotal = subtotal +  30;
}
                                    
         txtSub.setText(Double.toString(subtotal));
         
         subtotal = Double.parseDouble(txtSub.getText() );
         tax = subtotal * TAXRATE;
         total = tax + subtotal;
         
         txtTax.setText(Double.toString(tax));
         txtTot.setText(Double.toString(total));
    
    }                                      

    private void btnExiActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        System.exit(0);
    }                                      

    private void btnCleActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        radBlackCoffee.setSelected(false);
        radMocha.setSelected(false);
        radCappuccino.setSelected(false);
        chkStar.setSelected(false);
        chkCookies.setSelected(false);
        chkCinnamon.setSelected(false);
        txtTot.setText("");
        txtSub.setText("");
        txtTax.setText("");
    }                                      
         
